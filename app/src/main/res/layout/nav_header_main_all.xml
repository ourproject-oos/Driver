<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="@color/color5"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_user_nav"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"

        android:layout_gravity="center"
        android:src="@drawable/ic_user_empty"
        app:riv_border_color="@color/color1"
        app:riv_border_width="1dp"
        app:riv_corner_radius="50dp"
        tools:ignore="VectorDrawableCompat" />
    <TextView

        android:id="@+id/userName_in_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:gravity="center"
        android:textColor="@color/color1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/user_email_in_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color1"
        android:gravity="center"
        />

    <TextView
    android:id="@+id/police_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/color1"
    android:gravity="center"
    />


</LinearLayout>
